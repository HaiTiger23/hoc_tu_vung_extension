{
  "manifest_version": 3,
  "name": "Vocabulary Learning Extension",
  "description": "Tiện ích mở rộng giúp học và quản lý từ vựng giữa hai ngôn ngữ bất kỳ.",
  "version": "1.0.0",
  "action": {
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "permissions": [
    "storage",
    "alarms",
    "tabs",
    "contextMenus"
  ],
  
  "web_accessible_resources": [{
    "resources": ["assets/*"],
    "matches": ["<all_urls>"]
  }],
  "content_scripts": [
    {
      "matches": ["http://*/*", "https://*/*"],
      "js": ["content.js"]
    }
  ]
} 